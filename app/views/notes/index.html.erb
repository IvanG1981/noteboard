


    <%= link_to new_note_path do %>
      <span >
          Write Note
      </span>
    <% end %>
    <div >
        <% @notes.each do |note| %>
          <% unless note.seen  %>
            <p><%=note.content%>
              <span>
                <i>&nbsp;<%= link_to_unless(note.seen, 'Seen', note_seen_path(note)) %></i>
              </span>
            </p>
            <span>
                <i><%= time_ago_in_words(note.created_at) %>&nbsp;ago</i>
            </span>

          <% end %>
        <%end%>
    </div>
