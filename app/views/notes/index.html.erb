
<%= link_to new_note_path do %>
  <button type="button" class="btn btn-success btn-lg" id="AddNoteButton">Add Note</button>
  <br/>
<% end %>
<div class="container" >
    <% @notes.each do |note| %>
      <div class="card text-white bg-secondary mb-3" id="notebox">

          <h5 class="card-header">Written &nbsp;<%= time_ago_in_words(note.created_at) %></h5>
            <div class="card-body">
              <p class="card-text"><%=note.content%></p>
              <span>
                <a><%= link_to_unless(note.seen, 'Seen', note_seen_path(note)) %></a>
                <br/>
              </span>
            </div>
          <span>
            <i>This note will expire at <%= Time.at(note.expires_by.to_i).strftime("%B %e, %Y at %I:%M %p")%>&nbsp;</i>
          </span>
      </div>
    <% end %>
</div>
